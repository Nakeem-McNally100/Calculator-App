<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resulttop"
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light"
        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resulttop">


        <TextView
            android:id="@+id/result"
            android:layout_width="410dp"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/background_light"
            android:textSize="52sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="Del"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result" />

        <Button
            android:id="@+id/plusOrminus"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/cancel"
            app:layout_constraintTop_toBottomOf="@+id/result" />

        <Button
            android:id="@+id/mod"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/plusOrminus"
            app:layout_constraintTop_toBottomOf="@+id/result" />

        <Button
            android:id="@+id/divide"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mod"
            app:layout_constraintTop_toBottomOf="@+id/result" />

        <Button
            android:id="@+id/number7"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cancel" />

        <Button
            android:id="@+id/number8"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/number7"
            app:layout_constraintTop_toBottomOf="@+id/plusOrminus" />

        <Button
            android:id="@+id/number9"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/number8"
            app:layout_constraintTop_toBottomOf="@+id/mod" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number9"
            app:layout_constraintTop_toBottomOf="@+id/divide" />

        <Button
            android:id="@+id/number4"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number7" />

        <Button
            android:id="@+id/number5"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/number4"
            app:layout_constraintTop_toBottomOf="@+id/number8" />

        <Button
            android:id="@+id/number6"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/number5"
            app:layout_constraintTop_toBottomOf="@+id/number9" />

        <Button
            android:id="@+id/plus"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number6"
            app:layout_constraintTop_toBottomOf="@+id/multiply" />

        <Button
            android:id="@+id/number1"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number4" />

        <Button
            android:id="@+id/number2"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/number1"
            app:layout_constraintTop_toBottomOf="@+id/number5" />

        <Button
            android:id="@+id/number3"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/number2"
            app:layout_constraintTop_toBottomOf="@+id/number6" />

        <Button
            android:id="@+id/minus"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number3"
            app:layout_constraintTop_toBottomOf="@+id/plus" />

        <Button
            android:id="@+id/dp"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number1" />

        <Button
            android:id="@+id/number0"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/dp"
            app:layout_constraintTop_toBottomOf="@+id/number2" />

        <Button
            android:id="@+id/equal"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/number0"
            app:layout_constraintTop_toBottomOf="@+id/number3" />

        <Button
            android:id="@+id/clearbtn"
            android:layout_width="102.5dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/equal"
            app:layout_constraintTop_toBottomOf="@+id/minus" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>